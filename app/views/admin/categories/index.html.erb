<h1>Admin Categories</h1>

<div class="group">
  <%= link_to("New category", new_admin_category_path, class: "btn btn-primary pull-right") %>
</div>
<table class="table">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td>
          <%= link_to("Edit", edit_admin_category_path(category), class: "btn btn-sm btn-default")%>
          <%= link_to("Delete", admin_category_path(category),    class: "btn btn-sm btn-default",
                      method: :delete, data: { confirm: "Are you sure?" } )%>
      </td>
    </tr>
  <% end %>
</table>
