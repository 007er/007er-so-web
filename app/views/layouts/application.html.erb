<!DOCTYPE html>
<html>
  <head>
    <title>Web007erSo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="sidebar">
      <div id="logo">
        <%= link_to root_path do %>
          <%= image_tag "logo.svg" %>
        <% end %>
      </div>
      
      <ul>
        <li class="category">Website</li>
        <li><%= link_to "Blog", posts_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "City", cities_path %></li>
        <li><%= link_to "Trains", api_v1_trais_path %></li>
      </ul>

      <ul>
        <li class="category">Social</li>
        <li><a href="#">Twitter</a></li>
        <li><a href="#">Inastagram</a></li>
        <li><a href="#">Github</a></li>
        <li><a href="#">Email</a></li>
      </ul>

      <p class="sign_in">Admin Login</p>
    </div>

    <div id="main_content">

      <div id="header">
        <p>All Posts</p>
        <div class="buttons">
          
          <a class="button" href="/posts/new">New Post</a>
          
          <% if current_user %>
            <a class="button" href="/users/sign_out" data-method="delete">Sign Up</a>
            <a class="button" href="/users/edit">Edit Password</a>
          <% else %>
            <a class="button" href="/users/sign_up">Sign Up</a>
            <a class="button" href="/users/sign_in">Sign In</a>
          <% end %>
        </div>
      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert")%>
      <% end %>

      <%= yield %>

    </div>

  </body>
</html>
